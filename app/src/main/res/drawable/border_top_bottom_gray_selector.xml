<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- 连框颜色值 -->
            <item>
                <shape>
                    <solid android:color="@color/COLOR_BORDER_LINE"/>
                </shape>
            </item>
            <!-- 主体背景颜色值 -->
            <item
                android:bottom="1px"
                android:top="1px">
                <!--边框里面背景颜色 白色-->
                <shape>
                    <solid android:color="@color/WINDOW_BACKGROUND"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:drawable="@drawable/shape_border_bottom_top_gray"/>
</selector>