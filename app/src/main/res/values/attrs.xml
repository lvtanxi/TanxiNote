<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="HeartProgressBar">
        <attr name="heartColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="layoutBorderColor" format="color|reference"/>
        <attr name="layoutBgColor" format="color|reference"/>
        <attr name="layoutBorderWidth" format="float|dimension"/>
        <attr name="CircleImageWidth" format="float|dimension"/>
        <attr name="CircleImageHight" format="float|dimension"/>
        <attr name="CircleImagePadding" format="float|dimension"/>
        <attr name="CircleImageSrc" format="reference"/>
    </declare-styleable>


    <declare-styleable name="FancyIndexer">
        <attr name="widthOffset" format="dimension" />
        <attr name="minFontSize" format="integer" />
        <attr name="maxFontSize" format="integer" />
        <attr name="tipFontSize" format="integer" />
        <attr name="maxBezierHeight" format="dimension" />
        <attr name="maxBezierWidth" format="dimension" />
        <attr name="maxBezierLines" format="integer" />
        <attr name="additionalTipOffset" format="dimension" />
        <attr name="fontColor" format="color" />
        <attr name="tipFontColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ColorfulRingProgressView">
        <attr name="bgColor" format="color"/>
        <attr name="fgColorStart" format="color" />
        <attr name="fgColorEnd" format="color" />
        <attr name="fgtextColor" format="color" />
        <attr name="fgtextSzie" format="integer" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="percent" format="float"/>
        <attr name="startAngle" format="float"/>
    </declare-styleable>
</resources>

