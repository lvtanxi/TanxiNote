<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="@style/MatchMatch.Vertical"
              android:layout_width="match_parent"
              android:background="@drawable/wallpaper_1"
              android:clickable="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/wallpaper_5"
        android:elevation="10dp"
        android:gravity="center">

        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:id="@+id/nva_header"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:aiv_BoarderWidth="2dp"
            android:layout_centerVertical="true"
            android:src="@drawable/header"
            android:tint="?attr/colorPrimary"
            app:aiv_ShowBoarder="true"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/nva_recycler_view"
        style="@style/MatchAuto"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:weightSum="10">

        <Button
            android:id="@+id/nva_login_out"
            android:layout_width="0dip"
            android:layout_height="44dip"
            android:layout_weight="7"
            android:background="@drawable/btn_fastlogin_selector"
            android:elevation="10dp"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>