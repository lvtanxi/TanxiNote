<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="@style/MatchMatch.Vertical"
              android:background="@drawable/wallpaper_2"
              android:paddingLeft="50dp"
              android:paddingRight="50dp"
              android:weightSum="10">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <android.support.v7.widget.CardView
        style="@style/MatchWrap"
        android:layout_margin="8dp"
        android:fitsSystemWindows="true"
        android:background="@android:color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <LinearLayout
            style="@style/MatchMatch.Vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <com.lv.note.widget.TintImageView
                android:id="@+id/login_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:contentDescription="@null"
                android:src="@drawable/header"/>

            <android.support.design.widget.TextInputLayout
                style="@style/MatchWrap">

                <EditText
                    android:id="@+id/login_name"
                    style="@style/MatchWrap"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/MatchWrap"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/login_pwd"
                    style="@style/MatchWrap"
                    android:hint="请输入密码(6位及以上)"
                    android:inputType="textPassword"
                    android:maxLength="11"/>
            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                style="@style/MatchWrap"
                android:layout_margin="10dp">

                <com.lv.note.widget.HeartProgressBar
                    android:id="@+id/login_progress"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:heartColor="?attr/colorPrimary"
                    android:layout_centerHorizontal="true"/>

                <com.lv.note.widget.TintImageView
                    android:id="@+id/login_sub"
                    style="@style/WrapWrap"
                    android:layout_centerInParent="true"
                    android:background="?selectableItemBackground"
                    android:contentDescription="@null"
                    android:visibility="gone"
                    android:src="@drawable/go_p"/>

                <com.lv.note.widget.TintImageView
                    android:id="@+id/login_what"
                    style="@style/WrapWrap"
                    android:layout_below="@id/login_progress"
                    android:layout_alignParentRight="true"
                    android:background="?selectableItemBackground"
                    android:contentDescription="@null"
                    android:src="@drawable/what"/>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
