<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <com.lv.note.widget.progressview.ColorfulRingProgressView
        android:id="@+id/colorful_ring_progressview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:bgColor="@android:color/white"
        app:fgColorEnd="?attr/colorPrimary"
        app:fgColorStart="?attr/colorAccent"
        app:fgtextColor="?attr/colorAccent"
        app:startAngle="0"
        app:strokeWidth="15dp"/>

</RelativeLayout>
