<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap.CradView">

    <LinearLayout
        style="@style/MatchWrap.Horizontal">

        <ImageView
            android:id="@+id/movieitem_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_loading"/>

        <LinearLayout
            style="@style/MatchWrap.Vertical"
            android:background="?selectableItemBackground"
            android:padding="5dp">

            <com.lv.note.widget.Focusedtrue4TV
                android:id="@+id/movieitem_name"
                style="@style/MatchWrap"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:textSize="16sp"/>

            <TextView
                style="@style/WrapWrap.TOP5"
                android:text="类型:"/>

            <com.lv.note.widget.flowtag.TagFlowLayout
                android:id="@+id/movieitem_type"
                style="@style/WrapWrap"/>

            <TextView
                style="@style/WrapWrap"
                android:text="主演:"/>

            <com.lv.note.widget.flowtag.TagFlowLayout
                android:id="@+id/movieitem_person"
                style="@style/WrapWrap"/>

            <TextView
                android:id="@+id/movieitem_date"
                style="@style/WrapWrap"/>

            <TextView
                android:id="@+id/movieitem_time"
                style="@style/WrapWrap.TOP5"/>

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/movieitem_ratingbar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:numStars="5"
                android:progressDrawable="@drawable/room_rating_bar"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>